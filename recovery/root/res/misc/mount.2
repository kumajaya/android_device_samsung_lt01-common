#!/sbin/sh

# Import dual boot environment setup
. /res/misc/env.sh

echo $0 $* >> /dev/null

if echo "$*" | grep -q -i "remount"; then
    REMOUNT=",remount";
else
    REMOUNT="";
fi;

if (echo "$*" | grep -q -i "/system"); then
    busybox mount -t ext4 -o rw,noatime,nodiratime,noauto_da_alloc,barrier=1$REMOUNT /dev/block/loop0 /system >> /dev/null 2>&1
    busybox mount -t f2fs -o rw,noatime,nodiratime,background_gc=off,inline_xattr,active_logs=2$REMOUNT /dev/block/loop0 /system >> /dev/null 2>&1
    echo busybox mount -o rw$REMOUNT /dev/block/loop0 /system >> /dev/null
elif (echo "$*" | grep -q -i "/cache"); then
    busybox mount -t ext4 -o rw,noatime,nodiratime,noauto_da_alloc,barrier=1$REMOUNT $HIDDENDEV /cache >> /dev/null 2>&1
    busybox mount -t f2fs -o rw,noatime,nodiratime,background_gc=off,inline_xattr,active_logs=2$REMOUNT $HIDDENDEV /cache >> /dev/null 2>&1
    echo busybox mount -o rw$REMOUNT $HIDDENDEV /cache >> /dev/null
elif (echo "$*" | grep -q -i "/data"); then
    echo busybox mount $* >> /dev/null
else
    busybox mount $*
    echo busybox mount $* >> /dev/null
fi;
